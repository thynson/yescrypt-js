{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strict": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "incremental": true,
    "outDir": "lib/",
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2018"],
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"]
}
